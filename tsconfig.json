{
    "compileOnSave": false,
    "compilerOptions": {
      "jsx": "react",
      "baseUrl": "./",
      "outDir": "./dist/",
      "sourceMap": true,
      "allowJs": true,
      "declaration": false,
      "module": "commonjs",
      "alwaysStrict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "downlevelIteration": true,
      "importHelpers": true,
      "target": "es2019",
      "typeRoots": [
        "./node_modules/@types"
      ],
      "lib": [
        "es2019",
        "dom"
      ]
    },
    "include": [
      "src/index.tsx"
    ]
}
  