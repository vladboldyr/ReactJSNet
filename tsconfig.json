{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "outDir": "./dist/",
    "sourceMap": true,
    "allowJs": true,
    "declaration": false,
    "module": "esnext",
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "noImplicitAny":false,
    "target": "es2019",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2019",
      "dom"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/index.jsx"
  ]
}
